<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- ðŸ”™ Top Bar with Back, Title, and New Message Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- ðŸ”™ Back Button -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_button_logo"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- ðŸ‘¤ User Name (Title) -->
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OliviaD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/back_icon"
            android:layout_centerVertical="true"
            />

        <!-- âœ‰ï¸ New Message Icon -->
        <ImageView
            android:id="@+id/new_message_icon"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/new_message"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- ðŸ”¹ TabLayout for DMs & Requests -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/dark_brown"
        app:tabIndicatorHeight="4dp"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/dark_brown"/>






    <!-- ðŸ”¹ ViewPager2 for Tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
